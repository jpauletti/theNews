<div class="jumbotron text-center">
    <h1 class="text-uppercase">Buzzfeed Scraper</h1>
</div>


{{#each stories}}
<div class="card mb-3" data-story-id="{{this._id}}">
    <div class="row no-gutters">
        {{#if this.image}}
        <div class="col-md-4">
            <img src="{{this.image}}" class="card-img" alt="Article Image">
        </div>
        {{/if}}
        <div class="col-md-8">
            <div class="card-body">
                <a href="{{link}}" class="text-body" target="_blank"><h5 class="card-title">{{this.headline}}</h5></a>
                <p class="card-text">{{this.summary}}</p>
                <a href="#" class="btn btn-warning saveStory">Save Story</a>
                <a href="#" class="btn btn-info seeNotes">Notes</a>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{#unless stories}}
    <div class="row text-center justify-content-center">
        <div class="col-md-6">
            No stories yet....try scraping some now.<br><br>
            <a href="#" id="scrapeNew">Scrape New Stories?</a>
        </div>
    </div>
{{/unless}}

